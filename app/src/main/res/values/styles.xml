<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="alphabet_listView" parent="">

        <item name="background">@drawable/alphabet_list</item>

    </style>

    <style name="ImageViewWithCorner">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">21%</item>
    </style>

    <style name="CircleImageView">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="singleLineTextView" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">16dp</item>
        <item name="android:ellipsize">end</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="turningTextView" parent="Widget.AppCompat.TextView">
        <item name="android:ellipsize">marquee</item>
        <item name="android:marqueeRepeatLimit">marquee_forever</item>
    </style>

    <style name="ControllerIcons">
        <item name="android:tint">@color/white</item>
        <item name="android:layout_marginStart">7dp</item>
        <item name="android:layout_marginEnd">7dp</item>
    </style>

    <style name="Clickable">
        <item name="android:foreground">?android:selectableItemBackground</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
    </style>

    <style name="CarveClickable" parent="CircleImageView">
        <item name="android:foreground">?android:selectableItemBackground</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
    </style>
</resources>